# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1

# GraphQL endpoint
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:3001/graphql

# Application configuration
NEXT_PUBLIC_APP_NAME=IT ERP System
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# File upload configuration
NEXT_PUBLIC_MAX_FILE_SIZE=10485760  # 10MB
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt,csv,xlsx

# Theme configuration
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# External services (for production)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_SENTRY_DSN=

# Authentication configuration
NEXT_PUBLIC_AUTH_PROVIDER=jwt
NEXT_PUBLIC_ENABLE_REGISTRATION=true
NEXT_PUBLIC_REQUIRE_EMAIL_VERIFICATION=false
